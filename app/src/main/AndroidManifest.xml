            android:name="com.imasha.ifitcoach.activity.LoginActivity"
            android:screenOrientation="unspecified" />
        <activity
            android:name="com.imasha.ifitcoach.activity.CreateAccountActivity"
            android:screenOrientation="unspecified" />
        <activity
            android:name="com.imasha.ifitcoach.activity.MainActivity"
            android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.imasha.ifitcoach.activity.SplashActivity"
            android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
